{
  "openapi": "3.0.3",
  "info": {
    "title": "Zerogram",
    "version": "0.0.1",
    "description": "Zerogram API with Swagger"
  },
  "servers": [
    { "url": "http://localhost:4000", "description": "Local server" }
  ],
  "tags": [
    { "name": "Auth", "description": "인증 관련 API" },
    { "name": "User", "description": "사용자 관련 API" }
  ],
  "paths": {
    "/auth/signup": {
      "post": {
        "tags": ["Auth"],
        "summary": "회원 가입",
        "operationId": "authSignup",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/SignupRequest" }
            }
          }
        },
        "responses": {
          "201": {
            "description": "사용자 계정 생성 성공",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/SignupResponse" }
              }
            }
          },
          "400": {
            "description": "잘못된 요청",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ErrorResponse" }
              }
            }
          },
          "409": {
            "description": "이메일 중복",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ErrorResponse" }
              }
            }
          }
        }
      }
    },
    "/auth/login": {
      "post": {
        "tags": ["Auth"],
        "summary": "로그인",
        "operationId": "authLogin",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/LoginRequest" }
            }
          }
        },
        "responses": {
          "200": {
            "description": "로그인 성공",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/LoginResponse" }
              }
            }
          },
          "400": {
            "description": "이메일/비밀번호 누락 혹은 형식 에러",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ErrorResponse" }
              }
            }
          },
          "401": {
            "description": "인증 실패",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ErrorResponse" }
              }
            }
          }
        }
      }
    },
    "/auth/oauth": {
      "get": {
        "tags": ["Auth"],
        "summary": "소셜 로그인 콜백",
        "description": "OAuth 콜백에서 `state`(소셜 타입)와 `code`를 쿼리로 받아 처리합니다.",
        "operationId": "authOauthCallback",
        "parameters": [
          {
            "in": "query",
            "name": "state",
            "required": true,
            "schema": { "type": "string", "enum": ["google", "kakao"] },
            "description": "소셜 타입(현재 구현: google, kakao)"
          },
          {
            "in": "query",
            "name": "code",
            "required": true,
            "schema": { "type": "string" },
            "description": "OAuth 인가 코드"
          }
        ],
        "responses": {
          "200": {
            "description": "소셜 로그인 성공 또는 회원가입 진행",
            "content": {
              "application/json": {
                "schema": {
                  "oneOf": [
                    {
                      "$ref": "#/components/schemas/SocialLoginSucceededResponse"
                    },
                    {
                      "$ref": "#/components/schemas/SocialLoginProceedSignupResponse"
                    }
                  ],
                  "discriminator": {
                    "propertyName": "code",
                    "mapping": {
                      "SOCIAL_LOGIN_SUCCEEDED": "#/components/schemas/SocialLoginSucceededResponse",
                      "SOCIAL_LOGIN_SUCCEEDED_AND_SIGN_UP_PROCEED": "#/components/schemas/SocialLoginProceedSignupResponse"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "state/code 누락",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ErrorResponse" }
              }
            }
          },
          "403": {
            "description": "OAuth 토큰/사용자 정보 취득 실패",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ErrorResponse" }
              }
            }
          }
        }
      }
    },
    "/auth/logout": {
      "post": {
        "tags": ["Auth"],
        "summary": "로그아웃",
        "operationId": "authLogout",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "로그아웃 성공",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": { "type": "boolean", "example": true },
                    "message": { "type": "string", "example": "로그아웃 성공" },
                    "code": { "type": "string", "example": "LOGOUT_SUCCEEDED" },
                    "timestamp": { "type": "string", "format": "date-time" }
                  }
                }
              }
            }
          },
          "401": {
            "description": "인증 필요",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ErrorResponse" }
              }
            }
          },
          "404": {
            "description": "세션을 찾을 수 없음",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ErrorResponse" }
              }
            }
          },
          "500": {
            "description": "세션 삭제 실패(내부 서버 오류)",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ErrorResponse" }
              }
            }
          }
        }
      }
    },
    "/users/me": {
      "get": {
        "tags": ["User"],
        "summary": "내 정보 조회",
        "operationId": "getMyUserInfo",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "사용자 조회 성공",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": { "type": "boolean", "example": true },
                    "message": {
                      "type": "string",
                      "example": "사용자 조회 성공"
                    },
                    "code": {
                      "type": "string",
                      "example": "GET_USER_SUCCEEDED"
                    },
                    "timestamp": { "type": "string", "format": "date-time" },
                    "data": {
                      "type": "object",
                      "properties": {
                        "user": { "$ref": "#/components/schemas/User" }
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "인증 필요",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ErrorResponse" }
              }
            }
          }
        }
      },
      "patch": {
        "tags": ["User"],
        "summary": "내 정보 수정",
        "operationId": "updateMyUserInfo",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/UserUpdateRequest" }
            }
          }
        },
        "responses": {
          "200": {
            "description": "사용자 정보 수정",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/UpdateUserResponse" }
              }
            }
          },
          "400": {
            "description": "잘못된 요청(유효성 에러 등)",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ErrorResponse" }
              }
            }
          },
          "401": {
            "description": "인증 필요",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ErrorResponse" }
              }
            }
          },
          "404": {
            "description": "사용자 조회 실패(존재하지 않음)",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ErrorResponse" }
              }
            }
          },
          "500": {
            "description": "사용자 수정 실패(내부 서버 오류)",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ErrorResponse" }
              }
            }
          }
        }
      },
      "delete": {
        "tags": ["User"],
        "summary": "내 계정 삭제",
        "operationId": "deleteMyUser",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "사용자 삭제 성공",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/DeleteUserResponse" }
              }
            }
          },
          "401": {
            "description": "인증 필요",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ErrorResponse" }
              }
            }
          },
          "500": {
            "description": "사용자 삭제 실패(내부 서버 오류)",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ErrorResponse" }
              }
            }
          }
        }
      }
    },
    "/users/me/workouts": {
      "get": {
        "tags": ["User"],
        "summary": "내 운동일지 목록 조회 (연/월)",
        "operationId": "getMyWorkoutList",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "in": "query",
            "name": "year",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32",
              "minimum": 1970,
              "example": 2025
            },
            "description": "조회할 연도(예: 2025)"
          },
          {
            "in": "query",
            "name": "month",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32",
              "minimum": 1,
              "maximum": 12,
              "example": 9
            },
            "description": "조회할 월(1–12)"
          }
        ],
        "responses": {
          "200": {
            "description": "사용자 운동일지 목록 조회 성공",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/GetWorkoutListResponse"
                }
              }
            }
          },
          "400": {
            "description": "잘못된 요청(연/월 누락 또는 형식 에러)",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ErrorResponse" }
              }
            }
          },
          "401": {
            "description": "인증 필요",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ErrorResponse" }
              }
            }
          },
          "500": {
            "description": "내부 서버 오류",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ErrorResponse" }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["User"],
        "summary": "내 운동일지 생성",
        "operationId": "createMyWorkout",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "in": "query",
            "name": "date",
            "required": true,
            "schema": {
              "type": "string",
              "format": "date",
              "example": "2025-09-10"
            },
            "description": "운동일 날짜 (YYYY-MM-DD)"
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/WorkoutCreateRequest" }
            }
          }
        },
        "responses": {
          "201": {
            "description": "운동일지 생성 성공",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CreateWorkoutResponse"
                }
              }
            }
          },
          "400": {
            "description": "잘못된 요청(날짜/상세 누락 또는 형식 오류)",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ErrorResponse" }
              }
            }
          },
          "401": {
            "description": "인증 필요",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ErrorResponse" }
              }
            }
          },
          "500": {
            "description": "내부 서버 오류",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/ErrorResponse" }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "_id": { "type": "string", "example": "6650f1abcdef1234567890" },
          "email": {
            "type": "string",
            "format": "email",
            "example": "user@example.com"
          },
          "nickname": { "type": "string", "example": "홍길동" },
          "profile_image": {
            "type": "string",
            "format": "uri",
            "example": "https://cdn.example.com/u/123.png"
          },
          "gender": { "type": "string", "enum": ["m", "f"], "example": "m" },
          "role": {
            "type": "string",
            "enum": ["USER", "ADMIN"],
            "default": "USER",
            "example": "USER"
          },
          "createdAt": { "type": "string", "format": "date-time" },
          "updatedAt": { "type": "string", "format": "date-time" }
        },
        "required": ["email", "nickname"]
      },
      "_id": {
        "type": "string",
        "description": "MongoDB ObjectId",
        "pattern": "^[a-fA-F0-9]{24}$",
        "example": "6650f1abcdef1234567890"
      },
      "WorkoutType": {
        "type": "string",
        "enum": ["running", "fitness"]
      },
      "Workout": {
        "type": "object",
        "properties": {
          "_id": { "$ref": "#/components/schemas/_id" },
          "date": { "type": "string", "format": "date" },
          "userId": { "$ref": "#/components/schemas/_id" },
          "createdAt": { "type": "string", "format": "date-time" },
          "updatedAt": { "type": "string", "format": "date-time" },
          "details": {
            "type": "array",
            "items": { "$ref": "#/components/schemas/_id" }
          }
        },
        "required": ["date", "userId"]
      },
      "WorkoutDetail": {
        "type": "object",
        "properties": {
          "_id": { "$ref": "#/components/schemas/_id" },
          "workoutId": { "$ref": "#/components/schemas/_id" },
          "workout_name": { "$ref": "#/components/schemas/WorkoutType" },
          "duration": { "type": "number", "format": "float" },
          "calories": { "type": "number", "format": "float" },
          "feedback": { "type": "string", "nullable": true },
          "fitnessDetails": {
            "type": "array",
            "items": { "$ref": "#/components/schemas/_id" }
          },
          "avg_pace": { "type": "number", "format": "float", "nullable": true },
          "distance": { "type": "number", "format": "float", "nullable": true },
          "createdAt": { "type": "string", "format": "date-time" },
          "updatedAt": { "type": "string", "format": "date-time" }
        },
        "required": ["workoutId", "workout_name", "duration", "calories"]
      },
      "FitnessDetail": {
        "type": "object",
        "properties": {
          "_id": { "$ref": "#/components/schemas/_id" },
          "body_part": { "type": "string", "nullable": true },
          "fitness_type": { "type": "string", "nullable": true },
          "sets": { "type": "integer", "nullable": true },
          "reps": { "type": "integer", "nullable": true },
          "weight": { "type": "number", "format": "float", "nullable": true },
          "createdAt": { "type": "string", "format": "date-time" },
          "updatedAt": { "type": "string", "format": "date-time" }
        }
      },
      "ErrorResponse": {
        "type": "object",
        "properties": {
          "success": { "type": "boolean", "example": false },
          "message": {
            "type": "string",
            "example": "이메일 또는 비밀번호가 올바르지 않습니다."
          },
          "code": { "type": "string", "example": "BAD_REQUEST" },
          "timestamp": { "type": "string", "format": "date-time" }
        },
        "required": ["success", "message"]
      },
      "SignupRequest": {
        "type": "object",
        "required": ["email", "password", "name"],
        "properties": {
          "email": {
            "type": "string",
            "format": "email",
            "example": "user@example.com"
          },
          "password": {
            "type": "string",
            "minLength": 8,
            "example": "P@ssw0rd!"
          },
          "name": { "type": "string", "example": "홍길동" }
        }
      },
      "SignupResponse": {
        "type": "object",
        "properties": {
          "success": { "type": "boolean", "example": true },
          "message": { "type": "string", "example": "사용자 계정 생성 성공" },
          "code": { "type": "string", "example": "USER_CREATION_SUCCEEDED" },
          "timestamp": { "type": "string", "format": "date-time" },
          "userId": { "type": "string", "example": "6650f1abcdef1234567890" }
        }
      },
      "LoginRequest": {
        "type": "object",
        "required": ["email", "pw"],
        "properties": {
          "email": {
            "type": "string",
            "format": "email",
            "example": "user@example.com"
          },
          "pw": { "type": "string", "example": "P@ssw0rd!" }
        }
      },
      "LoginResponse": {
        "type": "object",
        "properties": {
          "success": { "type": "boolean", "example": true },
          "message": { "type": "string", "example": "로그인 성공" },
          "code": { "type": "string", "example": "LOGIN_SUCCEEDED" },
          "timestamp": { "type": "string", "format": "date-time" },
          "data": {
            "type": "object",
            "properties": {
              "user": { "$ref": "#/components/schemas/User" },
              "sessionId": { "type": "string", "example": "a1b2c3d4e5f6" }
            }
          }
        }
      },
      "SocialLoginSucceededResponse": {
        "type": "object",
        "properties": {
          "success": { "type": "boolean", "example": true },
          "message": { "type": "string", "example": "소셜 로그인 성공" },
          "code": { "type": "string", "example": "SOCIAL_LOGIN_SUCCEEDED" },
          "timestamp": { "type": "string", "format": "date-time" },
          "data": {
            "type": "object",
            "properties": {
              "user": { "$ref": "#/components/schemas/User" },
              "sessionId": { "type": "string", "example": "a1b2c3d4e5f6" }
            }
          }
        }
      },
      "SocialLoginProceedSignupResponse": {
        "type": "object",
        "properties": {
          "success": { "type": "boolean", "example": true },
          "message": {
            "type": "string",
            "example": "소셜 로그인 성공 및 회원가입 진행"
          },
          "code": {
            "type": "string",
            "example": "SOCIAL_LOGIN_SUCCEEDED_AND_SIGN_UP_PROCEED"
          },
          "timestamp": { "type": "string", "format": "date-time" },
          "data": {
            "type": "object",
            "properties": {
              "userInfo": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "format": "email",
                    "example": "social@example.com"
                  },
                  "name": { "type": "string", "example": "소셜유저" },
                  "profile_image": {
                    "type": "string",
                    "format": "uri",
                    "example": "https://cdn.example.com/u/social.png"
                  }
                },
                "required": ["email", "name"]
              }
            }
          }
        }
      },
      "UserUpdateRequest": {
        "type": "object",
        "properties": {
          "nickname": {
            "type": "string",
            "example": "새닉네임",
            "minLength": 1,
            "maxLength": 30
          }
        },
        "required": ["nickname"],
        "additionalProperties": false
      },
      "UpdateUserResponse": {
        "type": "object",
        "properties": {
          "success": { "type": "boolean", "example": true },
          "message": { "type": "string", "example": "사용자 정보 수정" },
          "code": { "type": "string", "example": "USER_UPDATE_SUCCEEDED" },
          "timestamp": { "type": "string", "format": "date-time" }
        }
      },
      "DeleteUserResponse": {
        "type": "object",
        "properties": {
          "success": { "type": "boolean", "example": true },
          "message": { "type": "string", "example": "사용자 삭제 성공" },
          "code": { "type": "string", "example": "USER_DELETION_SUCCEEDED" },
          "timestamp": { "type": "string", "format": "date-time" }
        }
      },

      "FitnessDetailDto": {
        "type": "object",
        "properties": {
          "_id": { "$ref": "#/components/schemas/_id" },
          "body_part": { "type": "string", "nullable": true },
          "fitness_type": { "type": "string", "nullable": true },
          "sets": { "type": "integer", "nullable": true },
          "reps": { "type": "integer", "nullable": true },
          "weight": { "type": "number", "format": "float", "nullable": true },
          "createdAt": { "type": "string", "format": "date-time" },
          "updatedAt": { "type": "string", "format": "date-time" }
        }
      },

      "WorkoutDetailDto": {
        "type": "object",
        "properties": {
          "_id": { "$ref": "#/components/schemas/_id" },
          "workoutId": { "$ref": "#/components/schemas/_id" },
          "workout_name": { "$ref": "#/components/schemas/WorkoutType" },
